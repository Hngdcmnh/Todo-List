<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"
        >
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <size
            android:height="20dp"
            android:width="20dp"
            ></size>

        <solid

            android:color="#4F8FAF"
            ></solid>
    </shape>



</item>

    <item android:state_selected="false"
        >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <size
                android:height="20dp"
                android:width="20dp"
                ></size>

            <solid

                android:color="#031F4B"
                ></solid>
        </shape>



    </item>

</selector>